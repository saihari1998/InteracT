                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layout2"
                        android:layout_below="@id/layout8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/dp8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/dp"
                            />

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:layout_toStartOf="@id/dp8"
                            android:text="Rama krishna"
                            android:textAlignment="viewEnd"
                            android:textColor="#000" />
                        <TextView
                            android:id="@+id/txt2"
                            android:layout_below="@id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/dp8"
                            android:text="DEVELOPER"
                            android:textAlignment="viewEnd"
                            android:textColor="#000" />




                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_margin="5dp"
                        android:layout_below="@id/layout2"
                        android:id="@+id/layout9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/dp9"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/dp"
                            />

                        <TextView
                            android:id="@+id/txt3"
                            android:textAlignment="viewStart"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:layout_toEndOf="@+id/dp9"
                            android:text="sangeeth shravan" />
                        <TextView
                            android:layout_below="@id/txt3"
                            android:textAlignment="viewStart"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/dp9"
                            android:text="ASSISTANT DESIGNER AND DEVLOPER" />


                    </RelativeLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>





        </RelativeLayout>


    </ScrollView>
