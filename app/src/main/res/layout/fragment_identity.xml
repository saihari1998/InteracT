<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context="com.example.rams.interact.identity">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_margin="15.5dp"
                android:id="@+id/identity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/IDT"
                    android:text="IDENTITY VOLUME 5-2018"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button

                    android:layout_marginLeft="69dp"
                    android:layout_toEndOf="@id/IDT"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/download"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/identity1"
                android:layout_margin="15.5dp"
                android:id="@+id/identity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/IDT2"
                    android:text="IDENTITY VOLUME 4-2017"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginLeft="69dp"
                    android:layout_toEndOf="@id/IDT2"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/download"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/identity2"
                android:layout_margin="15.5dp"
                android:id="@+id/identity3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/IDT3"
                    android:text="IDENTITY VOLUME 3-2016"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginLeft="69dp"
                    android:layout_toEndOf="@id/IDT3"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/download"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/identity3"
                android:layout_margin="15.5dp"
                android:id="@+id/identity4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/IDT4"
                    android:text="IDENTITY VOLUME 2-2015"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginLeft="69dp"
                    android:layout_toEndOf="@id/IDT4"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/download"
                    />




            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
