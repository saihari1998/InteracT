<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container1"
    android:background="@drawable/side_nav_bar"
    android:layout_height="match_parent"
    tools:context="com.example.rams.interact.home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/MVA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <!--MISSION-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MISSION"
                android:textAlignment="center"
                />
            <TextView
                android:id="@id/text2"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="11.5sp"
                android:layout_below="@id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
1.impart sound knownlegde of IT domain to the students.
2.Nuture students to contribute to dynamic industrial needs.
3.Empower faculty with the knownlegde in the emerging areas of IT
" />

            <TextView
                android:id="@+id/text3"
                android:layout_below="@id/text2"
                android:layout_margin="3dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISION"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/text4"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="11.5sp"
                android:layout_below="@id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
To be an outstanding center of IT education and research for betterment of society.
" />


            <TextView
                android:id="@+id/text5"
                android:layout_below="@id/text4"
                android:layout_margin="3dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/text6"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="11.5sp"
                android:layout_below="@id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
The department of information technology was established in the year 1999.Our mission is to provide quality education to the student and impart IT excellence in them.Apart from making them good technocrats.we also provide individual attention to make them good citizens of our nations to serve the industry and society constructively
" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>


      <!--FACULTIY-->


    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_below="@id/MVA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text7"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACULTIES"
                android:textAlignment="center"

                />


            <RelativeLayout

                android:layout_margin="5dp"
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dp1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dp"
                />

            <TextView
                android:textAlignment="center"
                android:textColor="#000"
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/dp1"
                android:text="DR.T.Nagarajan" />

                <TextView
                    android:layout_below="@id/text8"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:id="@+id/text81"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/dp1"
                    android:text="PROFESSOR and HOD" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_below="@id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/dp2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dp"
                    />

                <TextView
                    android:id="@+id/txt4"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_toStartOf="@+id/dp2"
                    android:text="Mr.sandana karuppan" />

                <TextView
                    android:layout_below="@id/txt4"
                    android:id="@+id/txt42"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/dp2"
                    android:text="PROFESSOR and STUDENT CO-OD" />




            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/dp3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/dp"
                    />

                <TextView
                    android:id="@+id/txt5"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_toEndOf="@+id/dp3"
                    android:text="DR.R.Srinivasan" />

                <TextView
                    android:layout_below="@id/txt5"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/dp3"
                    android:text="PROFESSOR" />





            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
